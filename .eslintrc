{
  "plugins": ["jest"],
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "env": {
    "node": true,
    "es2021": true
  },
  "globals": {
    "n": "readonly",
    "r": "readonly", 
    "assertDependencies": "readonly",
    "assertNodeEngines": "readonly"
  },
  "rules": {
    "no-console": "off",
    "indent": "off",
    "no-unused-vars": "warn",
    "no-undef": "error"
  }
}
